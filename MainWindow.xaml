<Window x:Class="Practical_task_4_example_2_Stetsenko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practical_task_4_example_2_Stetsenko"
        mc:Ignorable="d"
  Title="ContextMenuSample" Height="250" Width="250">
	<Grid>
		<!-- Градієнтний фон для вікна -->
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="#FF064C06"/>
				<GradientStop Color="#FF2CD60A" Offset="0.851"/>
			</LinearGradientBrush>
		</Grid.Background>

		<!-- Кнопка з контекстним меню -->
		<Button Content="Click me to select!" VerticalAlignment="Center"
                HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20"
                Foreground="White">

			<!-- Шаблон кнопки з тінню та заокругленими кутами -->
			<Button.Template>
				<ControlTemplate TargetType="Button">
					<Border Background="LightGreen" BorderBrush="White" BorderThickness="2"
                            CornerRadius="15" Padding="5,3">

						<!-- Тінь кнопки -->
						<Border.Effect>
							<DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
						</Border.Effect>

						<!-- Відображення вмісту кнопки -->
						<ContentPresenter HorizontalAlignment="Center"
VerticalAlignment="Center" RecognizesAccessKey="True"/>
					</Border>
				</ControlTemplate>
			</Button.Template>

			<!-- Контекстне меню з пунктами -->
			<Button.ContextMenu>
				<ContextMenu FontFamily="Comic Sans MS" FontSize="16">
					<MenuItem Header="Sweet" IsCheckable="True" IsChecked="False"/>
					<MenuItem Header="Salty" IsCheckable="True" IsChecked="False"/>
					<Separator/>
					<MenuItem Header="Spicy" IsCheckable="True" IsChecked="False"/>
				</ContextMenu>
			</Button.ContextMenu>
		</Button>
	</Grid>
</Window>
