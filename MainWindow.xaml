<Window x:Class="Practical_task_4_example_2_Stetsenko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practical_task_4_example_2_Stetsenko"
        mc:Ignorable="d"
  	   Title="ContextMenuSample" Height="250" Width="270">
	<StackPanel>
		<!-- Градієнтний фон для StackPanel -->
		<StackPanel.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="#FF064C06"/>
				<GradientStop Color="#FF2CD60A" Offset="0.851"/>
			</LinearGradientBrush>
		</StackPanel.Background>

		<!-- Текстове поле з контекстним меню -->
		<TextBox Text="Right-click here for context menu!"
             FontFamily="Comic Sans MS" FontSize="15"
             Background="#FF86F3A6" Foreground="White">

			<!-- Контекстне меню для TextBox -->
			<TextBox.ContextMenu>
				<ContextMenu FontFamily="Comic Sans MS" FontSize="16">

					<!-- Пункт меню: Вирізати -->
					<MenuItem Command="Cut">
						<MenuItem.Icon>
							<Image Source="component\images\scissors.png" />
						</MenuItem.Icon>
					</MenuItem>

					<!-- Пункт меню: Копіювати -->
					<MenuItem Command="Copy">
						<MenuItem.Icon>
							<Image Source="component\images\copy.png" />
						</MenuItem.Icon>
					</MenuItem>

					<!-- Роздільник -->
					<Separator/>

					<!-- Пункт меню: Вставити -->
					<MenuItem Command="Paste">
						<MenuItem.Icon>
							<Image Source="component\images\paste.png" />
						</MenuItem.Icon>
					</MenuItem>

				</ContextMenu>
			</TextBox.ContextMenu>
		</TextBox>
	</StackPanel>
</Window>
